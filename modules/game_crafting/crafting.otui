        item-id: 14903
      
      CategoryLabel
        text: Weapons

    CategoryButton
      id: equipmentCat
      width: 95
      @onClick: modules.game_crafting.selectCategory("equipment")

      CategoryItem
        item-id: 14904
      
      CategoryLabel
        text: Headers

    CategoryButton
      id: potionsCat
